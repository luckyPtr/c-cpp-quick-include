{
  "name": "c-cpp-quick-include",
  "displayName": "C/C++ Quick Include",
  "description": "Quickly insert #include statements in your C/C++ files without leaving the editor.",
  "version": "0.0.1",
  "author": {
    "name": "luckyPtr",
    "url": "https://github.com/luckyPtr"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/luckyPtr/c-cpp-quick-include"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "c-cpp-quick-include.quickInclude",
        "title": "Add",
        "category": "C/C++ Quick Include",
        "description": "%c-cpp-quick-include.quickInclude.description%"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "C/C++ Quick Include",
      "properties": {
        "c-cpp-quick-include.includesMarkers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["/INCLUDES/i"],
          "description": "%c-cpp-quick-include.includesMarkers.description%",
          "editPresentation": "multiline"
        },
        "c-cpp-quick-include.defaultIncludeStyle": {
          "type": "string",
          "enum": [
            "quotes",
            "angle-brackets"
          ],
          "enumDescriptions": [
            "%c-cpp-quick-include.defaultIncludeStyle.quotes%",
            "%c-cpp-quick-include.defaultIncludeStyle.angle-brackets%"
          ],
          "default": "quotes",
          "description": "%c-cpp-quick-include.defaultIncludeStyle.description%"
        },
        "c-cpp-quick-include.headerSearchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%c-cpp-quick-include.headerSearchPaths.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
